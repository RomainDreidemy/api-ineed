{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}

    <h1 class="h1">Pharmacy</h1>

    {% include 'Components/flashes.html.twig' %}


    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Informations</h5>

            <p>Identifiant : {{ pharmacy.id }}</p>
            <p>Name : {{ pharmacy.name }}</p>
            <p>Adress : {{ pharmacy.address }}</p>
            <p>phone number : {{ pharmacy.telephone }}</p>
            <p>telecopy number : {{ pharmacy.telecopie }}</p>
            <p>Longitude : {{ pharmacy.longitude }}</p>
            <p>Latitude : {{ pharmacy.latitude }}</p>
            <p>Horraires : </p>
            <ul>
                {% for horraire in pharmacy.pharmacieHorraires %}
                    <li>{{ horraire.day }} : {{ horraire.timeStart|date('H:i') }} - {{ horraire.timeEnd|date('H:i') }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>

{% endblock %}
