{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}

    <h1 class="h1">Users list</h1>

    <a href="{{ url('users_add') }}" type="button" class="btn btn-primary color-white mb-3">
        Create an user
    </a>

    {% include 'Components/flashes.html.twig' %}

    <table class="table table-hover table-bordered table-striped">
        <thead>
        <tr>
            <th scope="col" class="table-dark">#</th>
            <th scope="col" class="table-dark">Email</th>
            <th scope="col" class="table-dark">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
        <tr>
            <th scope="row">{{ user.id }}</th>
            <td>{{ user.email }}</td>
            <td>
                <a href="{{ url('users_update', {id: user.id}) }}" type="button" class="btn btn-primary color-white">
                    Update
                </a>
                <a href="{{ url('users_delete', {id: user.id}) }}" type="button" class="btn btn-danger color-white">
                    Remove
                </a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
